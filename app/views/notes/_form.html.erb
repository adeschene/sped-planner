<%= form_with model: [@activity, @activity.notes.build] do |form| %>
  <div class="form-group h-100 mb-3">
  	<%= form.text_area :body, class: "form-control", placeholder: "Type note here...", rows: "5" %>
  </div>
  <div class="form-group ms-2">
  	<%= form.submit "Submit", class: "btn btn-success border-dark" %>
  </div>
<% end %>