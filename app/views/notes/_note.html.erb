<div class="card mb-2 mx-4">
  <div class="card-body">
    <p class="card-text"><%= simple_format(note.body) %></p>
    <div class="text-end pe-2">
	  <%= link_to "Edit", edit_note_path(note), class: 'btn btn-sm btn-secondary px-3 mx-1' %>
      <%= link_to 'Delete', note, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>